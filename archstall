#!/bin/bash

#
# Archstall Arch Linux installer made by PowerMan2206.
#

# set style variables
red=$(tput setaf 1)
green=$(tput setaf 2)
yellow=$(tput setaf 3)
blue=$(tput setaf 4)
bold=$(tput bold)
italic=$(tput sitm)
end=$(tput sgr0)

# exit if a command fails
set -e

case $1 in
	--help | -h )
		echo "${bold}${green}Archstall Arch Linux installer $end"
		echo "This script is made by PowerMan2206"
		echo "https://github.com/PowerMan2206/archstall"
		echo ""
		echo "Usage:"
		echo "${bold}  --help | -h$end"
		echo "    show this help menu and exit"
		echo "${bold}  just running the script$end"
		echo "    run Archstall"
		echo ""
		echo "${italic}more coming soon maybe$end"
		echo ""
		
		exit
		;;
esac

clear

echo "${bold}${green}Archstall Arch Linux installer $end"
echo "${red}This script comes with no warranty, screwing up your system is your fault
You can cancel the script at any time by holding down Ctrl+C $end"
echo ""
read -rp "Press any key to continue... "
echo ""

# check the boot mode
if [[ -d /sys/firmware/efi/efivars ]]; then
	boot="uefi"
	echo "System booted in ${bold}UEFI$end mode"
else
	boot="bios"
	echo "System booted in ${bold}BIOS$end mode"
	echo "The installer will install Arch Linux in a way so that it's bootable in ${bold}BIOS$end mode."
	echo "Reboot into ${bold}UEFI$end mode if you want to install for that."
	echo ""
	read -rp "Press enter to continue or Ctrl+C to cancel..."
fi

echo ""

# set the system clock and wait a bit for the messages
echo "Ensuring the system clock is accurate..."
timedatectl set-ntp true; sleep 1 

echo ""

# create the package list
cat << EOF > packages
base
base-devel
linux
#linux-lts
linux-firmware

man-db

nano
#micro
#vim

# window managers
#i3-gaps
#bspwm
#openbox
#xmonad
#awesome
#herbstluftwm

# desktop environments (best to choose only one)
# a display manager gets automatically installed depending on which desktop environment you select
#gnome
#plasma
#lxqt
#mate
#xfce4 
#xfce4-goodies

# browsers
#firefox
#chromium
#qutebrowser

# other stuff
neofetch
#pulseaudio
EOF

clear

# get the disk to partition
lsblk
echo ""
read -rp "Select the disk you want to use ${red}(not a partition) $end" disk
echo ""

while true; do
# automatic or manual disk partitioning?
read -rp "(a)utomatic, (m)anual, or (s)kip disk partitioning? [automatic] " partitioning 
echo ""

case $partitioning in
	# automatic partitioning
	automatic | a | "" )
		case $boot in
			uefi )
				echo "The disk will be partitioned into a 512M EFI partition (${disk}1) and the root partition (${disk}2) taking up the rest"
				;;
			bios )
				echo "The disk will be partitioned into a single root partition taking up the entire disk (${disk}1)"
				;;
		esac
		
		echo "$bold${red}WARNING: THIS WILL ERASE EVERYTHING ON THE SELECTED DISK $end"
		read -rp "Are you sure you want to continue? You can cancel with Ctrl+C "
		echo ""

		# for loops are for nerds
		echo "Erasing disk in 5..."
		sleep 1
		echo "Erasing disk in 4..."
		sleep 1
		echo "Erasing disk in 3..."
		sleep 1
		echo "Erasing disk in 2..."
		sleep 1
		echo "Erasing disk in 1..."
		sleep 1
		echo ""
		
		case $boot in
			uefi )
				parted /dev/"$disk" mklabel gpt
				
				echo "${green}Making the ${bold}EFI partition...$end"
				parted /dev/"$disk" mkpart P1 1MiB 512MiB
				echo "${green}Formatting the EFI partition to FAT32...$end"
				mkfs.fat -F32 /dev/"${disk}"1
				efipartition="${disk}"1
				echo ""
				echo "${green}Making the ${bold}root partition...$end"
				parted /dev/"$disk" mkpart P2 512MiB 100%
				rootpartition="${disk}"2
				;;
				
			bios )
				parted /dev/"$disk" mklabel msdos
				
				echo "${green}Making the ${bold}root partition...$end"
				parted /dev/"$disk" mkpart primary 1MiB 100%
				parted /dev/"$disk" set 1 boot on
				rootpartition="${disk}"1
				;;
		esac
		
		break
		;;
	
	# manual partitioning
	manual | m )
		while true; do
		read -rp "Do you want to use (f)disk, (c)fdisk or (p)arted? [fdisk] " partitioner
		
		case $partitioner in
			f | fdisk | "" ) 
				fdisk /dev/"$disk" 
				break
				;;
			c | cfdisk ) 
				cfdisk /dev/"$disk" 
				break
				;;
			p | parted ) 
				parted /dev/"$disk" 
				break
				;;
			* )
				echo "${red}Invalid option!$end"
				echo ""
				;;
		esac
		done # while loop
				
		selectdisk=y
		break
		;;

	skip | s )
		echo "Skipping..."
		selectdisk=y
		break
		;;
	
	* )
		echo "${red}Invalid option!$end"
		echo ""
		;;

esac
done # while loop

case $selectdisk in
	y )
		sleep 1
		lsblk
		
		case $boot in
			uefi )
				echo ""
				read -rp "What's the ${bold}EFI$end partition? " efipartition
				echo "${green}Formatting the EFI partition to FAT32...$end"
				mkfs.fat -F32 /dev/"$efipartition"
				;;
		esac

		echo ""
		read -rp "What's the ${bold}root$end partition? " rootpartition
		echo ""	
		;;
esac

while true; do
read -rp "Select the root filesystem: ext(4), (x)fs, (b)trfs [ext4] " fs

case $fs in
	ext4 | 4 | "" )
		echo ""
		echo "Formatting the root partition to ext4..."
		mkfs.ext4 /dev/"$rootpartition"
		fs=ext4
		break
		;;
		
	btrfs | b )
		echo ""
		echo "Formatting the root partition to btrfs..."
		mkfs.btrfs -f /dev/$rootpartition
		btrfs subvolume create /
		fs=btrfs
		break
		;;
		
	xfs | x )
		echo ""
		echo "Formatting the root partition to xfs..."
		mkfs.xfs -f /dev/"$rootpartition"
		echo "xfsprogs" >> packages
		fs=xfs
		break
		;;	
		
	* )
		echo "${red}Invalid option!$end"
		echo ""
		;;
esac 
done # while loop

echo ""

# mount the partition/s
echo "Mounting the partitions..."
case $boot in
	uefi )
		mount /dev/"$rootpartition" /mnt
		mkdir /mnt/efi
		mount /dev/"$efipartition" /mnt/efi
		;;
	
	bios )
		mount /dev/"$rootpartition" /mnt
		;;
esac

clear

# edit package list
echo "Add/uncomment packages which you want in the packages file"
echo "(the ones already uncommented are basically must-haves)"
echo ""

while true; do
read -rp "Do you want to edit the package list with (n)ano, (v)im, or (s)kip? [nano] " editor

case $editor in
	nano | n | "" )
		nano packages
		break
		;;
	vim | v )
		vim packages
		break
		;;
	skip | s )
		echo ""
		echo "Skipping package list editing..."
		break
		;;
	* )
		echo "${red}Invalid option!$end"
		echo ""
		;;
esac
done # while loop

echo ""

# take the packages list and get rid of the comments
echo "Cleaning up the package list..."
grep -v "#" packages > packagesclean

echo ""

# put the DE service in a variable and install extra packages if needed
if grep -Fxq "gnome" packagesclean; then
	dm="gdm"
	de="y"
elif grep -Fxq "plasma" packagesclean; then
	dm="sddm"
	de="y"
	echo "konsole" >> packagesclean
elif grep -Fxq "lxqt" packagesclean || grep -Fxq "mate" packagesclean || grep -Fxq "xfce4" packagesclean; then
	dm="lightdm"
	de="y"
	echo "lightdm" >> packagesclean
	echo "lightdm-gtk-greeter" >> packagesclean
	echo "xorg-server" >> packagesclean
fi

# read the package list and install those packages
echo "Installing the packages with pacstrap..."
# actual installing
pacstrap /mnt - < packagesclean

echo ""

# make the fstab
echo "Generating the fstab..."
genfstab -U /mnt >> /mnt/etc/fstab

clear

# downloading the second script from GitHub
echo "${green}Downloading the second script...$end"
echo ""
curl https://raw.githubusercontent.com/PowerMan2206/archstall/master/archstall2 > /mnt/archstall2
chmod +x /mnt/archstall2

# declare stuff
echo "Declaring variables..."
if [ -n "$de" ]; then
	declare -p boot disk dm de fs > /mnt/varstuff
else
	declare -p boot disk fs > /mnt/varstuff
fi

echo ""

# chroot in and run the second script
arch-chroot /mnt /archstall2

clear

# cleanup
echo "Cleaning up files..."
rm /mnt/archstall2 /mnt/varstuff

echo ""

# unmount the filesystems
echo "Unmounting the filesystems..."
umount -R /mnt 

echo ""

# reboot
echo "${bold}${green}Installation finished!$end"
read -rp "Press enter to reboot... "
reboot
